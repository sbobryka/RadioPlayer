<Window x:Class="RadioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioPlayer"
        mc:Ignorable="d"
        Title="Radio Player" Height="300" Width="600"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Состояние"/>
            </StatusBarItem>
        </StatusBar>
        <ListBox DockPanel.Dock="Left" Width="200">
            <ListBoxItem Content="Станция 1"/>
            <ListBoxItem Content="Станция 2"/>
            <ListBoxItem Content="Станция 3"/>
        </ListBox>
        <DockPanel>
            <Grid DockPanel.Dock="Bottom" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="2" Content="Играть" Margin="5,5,5,5"/>
            </Grid>
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Название:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="1" Text="Адрес:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
